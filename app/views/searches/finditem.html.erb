<h2 id="listhead">Items from FreeCycle Group <%= @groupname %></h2>

<div class="general">
  <ul class="shop-list">
    <% @listing.each do |listing|%>
        <li class="shop-list">
          <div class="item"><b>Item title:</b> <br> <%= listing[:title] %> <br><br>
          <div class="neighborhood"><b>Neighborhood:</b><br> <%= listing[:neighborhood] %>
          <P>
          Click <%= link_to 'here for details', :controller=>"listings", :action => "getlisting", :group_name=>@groupname, :number=>listing[:number] %>
          </div>
        </li>
    <% end %>
  </ul>
</div>
